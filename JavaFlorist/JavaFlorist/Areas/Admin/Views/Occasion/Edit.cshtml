@model JavaFlorist.Models.Occasion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Occasion Edit</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="admin" asp-controller="dashboard" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Occasion Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Occasion Info</h3>
                </div>
                <form role="form" method="post" asp-area="admin" asp-controller="occasion" asp-action="edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Occasion ID</label>
                            <input type="text" class="form-control" asp-for="Id" readonly>
                        </div>
                        <div class="form-group">
                            <label for="inputName">Occasion Name</label>
                            <input type="text" id="inputName" class="form-control" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label for="inputStatus">Photo</label>
                            <div class="custom-file">
                                <input name="image" type="file" class="custom-file-input">
                                <label class="custom-file-label" for="exampleInputFile" align="left">Choose file</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Occasion Description</label>
                            <textarea class="form-control" asp-for="Description"></textarea>
                        </div>
                        <input type="hidden" class="form-control" asp-for="Photo">
                        <div class="form-group">
                            <label for="inputClientCompany">Start Month</label>
                            <input type="number" class="form-control" asp-for="StartMonth">
                        </div>
                        <div class="form-group">
                            <label for="inputProjectLeader">End Month</label>
                            <input type="number" class="form-control" asp-for="EndMonth">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                    
                </form>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-6">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Occasion Photo</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <img src="~/images/occasions/@ViewBag.occPhoto" height="300" width="300" />
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
