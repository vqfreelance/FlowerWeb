@model JavaFlorist.Models.Account

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>JavaFlorist | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
    <link href="~/admin/dist/css/validate.css" rel="stylesheet" />

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a asp-area="admin" asp-controller="account" asp-action="register"><b>Admin</b>JavaFlorist</a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Register a new membership</p>

                <form id="signup_form" method="post" asp-area="admin" asp-controller="account" asp-action="register">

                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Username" asp-for="Username" id="username" name="Username" data-error="#Username">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="errorTxt"><span id="Username"></span></div>

                    <div class="input-group">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" id="password" name="Password" data-error="#Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="errorTxt"><span id="Password"></span></div>

                    <div class="input-group">
                        <input type="password" class="form-control" placeholder="Retype password" name="Password2" data-error="#Password2">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="errorTxt"><span id="Password2"></span></div>

                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Full name" asp-for="Name" id="name" name="Name" data-error="#Name">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="errorTxt"><span id="Name"></span></div>

                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Email" asp-for="Email" id="email" name="Email" data-error="#Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="errorTxt"><span id="Email"></span></div>

                    <div class="input-group">
                        <input type="number" class="form-control" placeholder="Phone number" asp-for="Phone" id="phone" name="Phone" data-error="#Phone">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-phone"></span>
                            </div>
                        </div>
                    </div>
                    <div class="errorTxt"><span id="Phone"></span></div>

                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <br />


                <a asp-area="admin" asp-controller="account" asp-action="login" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>

    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>
    <script src="~/admin/dist/js/validate.js"></script>

</body>
</html>

