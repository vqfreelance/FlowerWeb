
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="login-page">
        <div class="login-box">
            <h3>Login account</h3> <br />
            <form name="box-signin" id="login_form" method="POST" asp-controller="account" asp-action="login">
                <input name="action" type="hidden" value="Login">
                <div class="form-group">
                    <label for="phone">Username</label>
                    <input class="form-control" type="text" name="customer_username" placeholder="Username" value="@ViewBag.customer_username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="customer_password" placeholder="Password" value="@ViewBag.customer_password">
                </div>
                <div class="kt-checkbox-list">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="kt-checkbox kt-checkbox--success">
                                <input type="checkbox" value="option1"> Remember password<span></span>
                            </label>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="">Fogot Password?</a>
                        </div>
                    </div>
                </div>
                <a style="color:red">@ViewBag.error</a>
                <div class="form-group text-center"><button class="btn btn-login" type="submit">Login</button></div>
                <div class="text-center">Do not have an account? <a asp-controller="account" asp-action="signup">SignUp Now!</a></div>
            </form>
        </div>
    </div>