
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model JavaFlorist.Models.Account

    <div class="signup-page">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
            <li class="breadcrumb-item active">Signup</li>
        </ol>
        <div class="signup-box">
            <h3>Create a new account</h3> <br />
            <form name="box-signup" id="signup_form" method="POST" asp-controller="account" asp-action="signup">
                <input name="return" class="return_popup_login" type="hidden" data-return="" value="">
                <input name="action" type="hidden" value="Register">
                <div class="form-group">
                    <label for="customer_name">Name</label>
                    <input class="form-control" type="text" name="Name" placeholder="Name" value="@ViewBag.name">
                </div>
                <div class="form-group">
                    <label for="customer_username">Username</label>
                    <input class="form-control" type="text" name="Username" placeholder="Username" value="@ViewBag.username">
                </div>
                <div class="form-group">
                    <label for="customer_password">Password</label>
                    <input class="form-control" type="password" id="Password" name="Password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="customer_password2">Confirm-Password</label>
                    <input class="form-control" type="password" name="Password2" placeholder="Confirm-Password">
                </div>
                <div class="form-group">
                    <label for="customer_phone">Phone Number</label>
                    <input class="form-control" type="text" name="Phone" placeholder="Phone Number" value="@ViewBag.phone">
                </div>
                <div class="form-group">
                    <label for="customer_phone">Email</label>
                    <input class="form-control" type="email" name="Email" placeholder="Email" value="@ViewBag.email">
                </div>
                <div class="form-group">
                    <label for="customer_phone">Address</label>
                    <input class="form-control" type="text" name="Address" placeholder="Address" value="@ViewBag.address">
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-signup" type="submit">SignUp</button>
                </div>
                <a style="color:red">@ViewBag.error</a>
                <div class="form-group text-center rgt">
                    Already have an account?
                    <a asp-controller="account" asp-action="login">Login now</a>
                </div>
            </form>
        </div>
    </div>


