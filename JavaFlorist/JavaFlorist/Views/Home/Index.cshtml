@using System.Globalization
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model JavaFlorist.Models.Bouquet
@*<div class="container">*@

<div class="middle-header">
    <form class="form-inline my-2 my-lg-0" asp-controller="bouquet" asp-action="search">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" name="keyword" style="width:60%">
        <button class="btn my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>
<div class="row top-content-wrapp">


    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/banner/banner1.jpg">
            </div>
            <div class="carousel-item">
                <img src="~/images/banner/banner2.jpg">
            </div>
        </div>
    </div>

    <div class="services-guarante">
        <ul>
            <li>
                <a><i class="fa fa-money" aria-hidden="true"></i> Fair Price</a>
            </li>
            <li>
                <a><i class="fa fa-truck" aria-hidden="true"></i> Delivery in 5 hours</a>
            </li>
            <li>
                <a><i class="fa fa-pagelines" aria-hidden="true"></i> Fresh flowers in 3 days</a>
            </li>
            <li>
                <a><i class="fa fa-leaf" aria-hidden="true"></i> Environment friendly</a>
            </li>
        </ul>
    </div>
</div>
@*</div>*@
@*<div class="container">*@
<div class="occasion-group">
    <div><span>Header</span></div>
    <div class="row">
        <div><button class="btn">1</button></div>
        <div><button class="btn">2</button></div>
        <div><button class="btn">3</button></div>
        <div><button class="btn">4</button></div>
        <div><button class="btn">4</button></div>
    </div>
</div>
<div class="group-product-wrapp" style="margin-top:40px">
    <h2><a href="">Award Flowers & Service Flowers </a></h2>
    <div class="products-type hidden-xs" style="margin: 10px 0 40px;">
        <ul class="type-list">
            @foreach (var occasion in ViewBag.NumberOccasions)
            {
                <li>
                    <a asp-controller="home" asp-action="OccBouquet" asp-route-id="@occasion.Id">
                        <img src="~/images/occasions/@occasion.Photo"><span>@occasion.Name</span>
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="row products service-product">
        <div class="col-lg-12 col-lg-custom-12">
            <div class="row">
                @foreach (var b in ViewBag.bouquets)
                {
                    <div class="col-lg-3 col-xs-6 blur-box item-580">
                        <div class="product-item">
                            <div class="product-img">
                                <a asp-controller="bouquet" asp-action="detail" asp-route-id="@b.Id">
                                    <img itemprop="image" src="~/images/bouquets/@b.Photo" alt="@b.Name" />
                                </a>
                            </div>
                            <div class="product-title">
                                <a href="" class="title-products"
                                   title="@b.Name"><span itemprop="name">@b.Name</span></a>
                            </div>
                            <div class="product-price">
                                <b>@(((decimal)b.Price).ToString("C", CultureInfo.CurrentCulture))</b>
                            </div>
                            @*<div class="product-cart">
                                    <div class="row">
                                        <div class="col-sm-6 text-left">
                                            <img class="btn" src="~/images/shopping-cart.png" href="#" onClick="quickbuyout(@b.Id)" />
                                        </div>
                                        <div class="col-sm-6 text-right">
                                            <img class="btn" src="~/images/plus.png" href="#" onClick="quickaddcart(@b.Id)" />
                                        </div>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                }
                <div class="col-lg-12 col-xs-12 text-center mr-bottom-30">
                    <a class="btn-readmore"
                       asp-controller="Bouquet" asp-action="Index">
                        View All
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@*</div>*@
